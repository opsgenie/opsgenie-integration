<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
    <param name="configure.url">/secure/ConfigureApiKey.jspa</param>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="jiraServerPlugin"/>
  <!-- add our web resources -->
  <web-resource key="jiraServerPlugin-resources" name="jiraServerPlugin Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="jiraServerPlugin.css" location="/css/jiraServerPlugin.css"/>
    <resource type="download" name="jiraServerPlugin.js" location="/js/jiraServerPlugin.js"/>
    <resource type="download" name="images/" location="/images"/>
    <context>jiraServerPlugin</context>
  </web-resource>
  <servlet name="Configure ApiKey Servlet" key="apiKey" class="com.opsgenie.plugin.controller.ConfigurationServlet">
    <description>Configure ApiKey</description>
    <url-pattern>/opsgenie-webhook-listener*</url-pattern>
  </servlet>
  <webwork1 key="configureApiKey" name="Configure Opsgenie ApiKey" class="java.lang.Object">
    <actions>
      <action name="com.opsgenie.plugin.controller.ConfigureApiKeyAction" alias="ConfigureApiKey"
              roles-required="sysadmin">
        <view name="success">/templates/configure.vm</view>
        <view name="error">/templates/configure.vm</view>
        <view name="input">/templates/configure.vm</view>
      </action>
    </actions>
  </webwork1>
  <web-item key="admin_opsgenie_webitem" name="admin_opsgenie_webitem"
            section="admin_plugins_menu/admin_opsgenie_section" weight="15"
            i18n-name-key="opsgenie-plugin.admin.apiKey.page.web.item.name">
    <label key="opsgenie-plugin.admin.apiKey.page.web.item.name"/>
    <link linkId="admin_opsgenie_webitem_link">/secure/ConfigureApiKey.jspa</link>
  </web-item>
  <web-section key="admin_opsgenie_apiKey_section" name="admin_opsgenie_apiKey_section" location="admin_plugins_menu"
               weight="20" i18n-name-key="opsgenie-plugin.admin.apiKey.page.web.section.name">
    <label key="opsgenie-plugin.admin.apiKey.page.web.section.name"/>
  </web-section>
  <web-resource key="opsgenie-apikey-resources" name="opsgenie-plugin ApiKey Resources for Configuration Page">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="jiraServerPlugin.js" location="/js/jiraServerPlugin.js"/>
    <context>jiraServerPlugin</context>
  </web-resource>
  <webhook key="an event" event="jira:issue_created" url="/plugins/servlet/opsgenie-webhook-listener/create"/>
  <webhook key="an event2" event="jira:issue_updated" url="/plugins/servlet/opsgenie-webhook-listener/update"/>
</atlassian-plugin>
